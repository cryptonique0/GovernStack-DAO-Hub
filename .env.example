# Stacks Network Configuration
STACKS_NETWORK=testnet
STACKS_API_URL=https://api.testnet.hiro.so

# Contract Deployment
DEPLOYER_PRIVATE_KEY=your_private_key_here
GOVERNANCE_CONTRACT_ADDRESS=your_contract_deployer_address_here
GOVERNANCE_CONTRACT_NAME=governance-core

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/governstack
POSTGRES_USER=governstack
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=governstack

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# API Configuration
API_PORT=3001
API_HOST=localhost
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# Frontend Configuration
VITE_API_URL=http://localhost:3001
VITE_STACKS_NETWORK=testnet
VITE_CONTRACT_ADDRESS=your_contract_deployer_address_here

# IPFS Configuration
IPFS_API_URL=https://ipfs.infura.io:5001
IPFS_GATEWAY_URL=https://ipfs.io/ipfs/
IPFS_PROJECT_ID=your_project_id_here
IPFS_PROJECT_SECRET=your_project_secret_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password_here

# Security
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_DB_URL=postgresql://user:password@localhost:5432/analytics
